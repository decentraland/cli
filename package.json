{
  "name": "decentraland",
  "version": "1.4.0",
  "description": "CLI tool for parcel management.",
  "main": "./dist/index.js",
  "scripts": {
    "start": "npm run watch",
    "watch": "decentraland-compiler build.json --watch",
    "build": "decentraland-compiler build.json && npm run linker:build && npm run copy:resources",
    "copy:resources": "cp -r src/samples dist && cp -r src/certs dist && cp -r src/css dist",
    "linker:build": "decentraland-compiler build.linker.json",
    "linker:watch": "decentraland-compiler build.linker.json --watch",
    "lint": "tslint -e 'src/samples/**/*' -e '*.json' -c tslint.json 'src/**/*.ts'",
    "test": "mocha -r ts-node/register test/**/*.spec.ts",
    "unlock:dev": "node ./scripts/unlockDevDeps.js",
    "release": "node ./scripts/npmPublish.js",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "linters": {
      "*.ts": [
        "tslint -c tslint.json",
        "prettier --write",
        "git add"
      ]
    },
    "ignore": [
      "src/samples/**/*.ts"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/decentraland/cli.git"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 140
  },
  "keywords": [
    "decentraland",
    "cli"
  ],
  "author": "Decentraland",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/decentraland/cli/issues"
  },
  "homepage": "https://github.com/decentraland/cli#readme",
  "bin": {
    "dcl": "./bin/dcl"
  },
  "engines": {
    "node": ">=8.0.0",
    "npm": "<=5"
  },
  "dependencies": {
    "analytics-node": "^3.2.0",
    "body-parser": "^1.18.3",
    "chalk": "^2.3.1",
    "chokidar": "^2.0.3",
    "comma-separated-values": "^3.6.4",
    "cors": "^2.8.4",
    "docker-names": "^1.0.3",
    "eth-connect": "^0.3.0",
    "express": "^4.16.2",
    "fs-extra": "^6.0.0",
    "glob": "^7.1.3",
    "ignore": "^4.0.3",
    "inquirer": "^5.1.0",
    "interface-datastore": "^0.5.0",
    "ipfs-unixfs-engine": "^0.32.4",
    "isomorphic-fetch": "^2.2.1",
    "opn": "^5.2.0",
    "ora": "^2.1.0",
    "package-json": "^4.0.1",
    "portfinder": "^1.0.13",
    "request": "^2.88.0",
    "semver": "^5.5.0",
    "vorpal": "^1.12.0",
    "wildcards": "^1.0.2",
    "ws": "^6.0.0"
  },
  "devDependencies": {
    "@types/analytics-node": "0.0.31",
    "@types/chai": "^4.1.2",
    "@types/chalk": "^2.2.0",
    "@types/express": "^4.11.1",
    "@types/fs-extra": "^5.0.0",
    "@types/glob": "^7.1.1",
    "@types/inquirer": "0.0.36",
    "@types/isomorphic-fetch": "0.0.34",
    "@types/mocha": "^2.2.48",
    "@types/node": "^8.5.2",
    "@types/opn": "^5.1.0",
    "@types/ora": "^1.3.4",
    "@types/react-dom": "^16.0.4",
    "@types/request": "^2.48.1",
    "@types/sinon": "^4.3.1",
    "@types/uuid": "^3.4.3",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "cpy-cli": "^1.0.1",
    "cross-spawn": "^6.0.5",
    "dcl-tslint-config-standard": "^1.0.1",
    "decentraland-dapps": "^1.0.5",
    "decentraland-eth": "^4.3.0",
    "decentraland-rpc": "^3.0.1",
    "decentraland-ui": "1.12.9",
    "git-rev-sync": "^1.11.1",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.0",
    "mkdirp": "^0.5.1",
    "mocha": "^4.1.0",
    "prettier": "^1.14.0",
    "proxyquire": "^2.0.1",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-redux": "^5.0.7",
    "react-router-redux": "^4.0.8",
    "redux": "^4.0.0",
    "redux-logger": "^3.0.6",
    "redux-saga": "^0.16.0",
    "rimraf": "^2.6.2",
    "sinon": "^7.1.1",
    "ts-node": "^4.1.0",
    "tslint": "^5.11.0",
    "typesafe-actions": "^2.0.4",
    "uuid": "^3.3.2"
  }
}
