{
  "name": "decentraland",
  "version": "0.4.8",
  "description": "CLI tool for parcel management.",
  "main": "./dist/index.js",
  "scripts": {
    "start": "(mkdir tmp || true) && cd tmp && NODE_ENV=dev ../bin/dcl",
    "watch": "tsc --watch",
    "build": "npm run clean && tsc && npm run linker:build && npm run copy:samples",
    "copy:samples": "cp -r src/samples dist/samples",
    "clean": "rimraf dist && rimraf tmp",
    "linker:dev": "next",
    "linker:start": "npm run linker:build && ts-node src/index.ts link",
    "linker:build": "next build && next export -o dist/linker-app",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "lint:fix": "tslint -c tslint.json 'src/**/*.ts' --fix",
    "tsc": "tsc",
    "test": "mocha -r ts-node/register src/**/*.spec.ts",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/decentraland/cli.git"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120
  },
  "keywords": [
    "decentraland",
    "cli"
  ],
  "author": "Decentraland",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/decentraland/cli/issues"
  },
  "homepage": "https://github.com/decentraland/cli#readme",
  "bin": {
    "dcl": "./bin/dcl"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "dependencies": {
    "@types/uuid": "^3.4.3",
    "axios": "^0.17.1",
    "babel-polyfill": "^6.26.0",
    "chalk": "^2.3.1",
    "dcl-sdk": "^2.2.2",
    "decentraland-commons": "^3.1.1",
    "docker-names": "^1.0.3",
    "express": "^4.16.2",
    "fs-extra": "^5.0.0",
    "get-installed-path": "^4.0.8",
    "gitignore-parser": "0.0.2",
    "inquirer": "^5.1.0",
    "ipfs-api": "^17.5.0",
    "koa": "^2.5.0",
    "koa-router": "^7.4.0",
    "koa-static": "^4.0.2",
    "next": "^4.2.2",
    "opn": "^5.2.0",
    "progress": "^2.0.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "root-check": "^1.0.0",
    "uuid": "^3.2.1",
    "vorpal": "^1.12.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/chalk": "^2.2.0",
    "@types/fs-extra": "^5.0.0",
    "@types/inquirer": "0.0.36",
    "@types/koa": "^2.0.44",
    "@types/koa-router": "^7.0.27",
    "@types/koa-static": "^4.0.0",
    "@types/mocha": "^2.2.48",
    "@types/next": "^2.4.8",
    "@types/node": "^8.5.2",
    "@types/opn": "^5.1.0",
    "@types/progress": "^2.0.1",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-regenerator": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "chai": "^4.1.2",
    "cross-env": "^5.1.3",
    "mocha": "^4.1.0",
    "prettier": "^1.9.2",
    "rimraf": "^2.6.2",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "typescript": "^2.7.2",
    "uglifyjs-webpack-plugin": "^1.1.6"
  }
}
