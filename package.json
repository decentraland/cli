{
  "name": "decentraland",
  "version": "1.0.3",
  "description": "CLI tool for parcel management.",
  "main": "./dist/index.js",
  "scripts": {
    "start": "npm run watch",
    "watch": "tsc --watch & metaverse-compiler build.json --watch",
    "build": "tsc && npm run linker:build && npm run copy:samples",
    "copy:samples": "cp -r src/samples dist/samples",
    "linker:build": "metaverse-compiler build.json",
    "lint": "tslint -e 'src/samples/**/*' -e '*.json' -c tslint.json 'src/**/*.ts'",
    "tsc": "tsc",
    "test": "mocha -r ts-node/register test/**/*.spec.ts",
    "release": "node ./scripts/npmPublish.js",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint",
      "prettier --write 'src/**/*.ts'",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/decentraland/cli.git"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 140
  },
  "keywords": [
    "decentraland",
    "cli"
  ],
  "author": "Decentraland",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/decentraland/cli/issues"
  },
  "homepage": "https://github.com/decentraland/cli#readme",
  "bin": {
    "dcl": "./bin/dcl"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "dependencies": {
    "analytics-node": "^3.2.0",
    "axios": "^0.17.1",
    "chalk": "^2.3.1",
    "chokidar": "^2.0.3",
    "decentraland-eth": "^1.3.3",
    "docker-names": "^1.0.3",
    "express": "^4.16.2",
    "fs-extra": "^5.0.0",
    "ignore": "^3.3.7",
    "inquirer": "^5.1.0",
    "ipfs-api": "^17.5.0",
    "metaverse-rpc": "^2.6.0",
    "opn": "^5.2.0",
    "package-json": "^4.0.1",
    "semver": "^5.5.0",
    "uuid": "^3.2.1",
    "vorpal": "^1.12.0",
    "wildcards": "^1.0.2",
    "ws": "^5.1.1"
  },
  "devDependencies": {
    "@types/analytics-node": "0.0.31",
    "@types/chai": "^4.1.2",
    "@types/chalk": "^2.2.0",
    "@types/express": "^4.11.1",
    "@types/fs-extra": "^5.0.0",
    "@types/inquirer": "0.0.36",
    "@types/mocha": "^2.2.48",
    "@types/node": "^8.5.2",
    "@types/opn": "^5.1.0",
    "@types/react-dom": "^16.0.4",
    "@types/sinon": "^4.3.1",
    "@types/uuid": "^3.4.3",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "cross-spawn": "^6.0.5",
    "dcl-tslint-config-standard": "^1.0.1",
    "git-rev-sync": "^1.11.1",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.5",
    "mocha": "^4.1.0",
    "prettier": "^1.9.2",
    "proxyquire": "^2.0.1",
    "react": "^16.3.1",
    "react-dom": "^16.3.1",
    "rimraf": "^2.6.2",
    "sinon": "^4.5.0",
    "ts-node": "^4.1.0",
    "tslint": "^5.9.1",
    "typescript": "^2.7.2"
  }
}
