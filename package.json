{
  "name": "decentraland",
  "version": "1.4.0",
  "description": "Decentraland CLI developer tool.",
  "bin": {
    "dcl": "bin/dcl"
  },
  "files": [
    "bin",
    "dist",
    "abi"
  ],
  "scripts": {
    "start": "npm run watch",
    "watch": "npm run cli:watch",
    "build": "npm run cli:build && npm run linker:build && npm run scripts:build && npm run copy:resources",
    "cli:watch": "ncc build src/index.ts -o dist/cli --source-map --watch",
    "cli:build": "ncc build src/index.ts -o dist/cli --source-map --minify",
    "linker:build": "decentraland-compiler build.linker.json",
    "linker:watch": "decentraland-compiler build.linker.json --watch",
    "scripts:build": "decentraland-compiler build.json",
    "scripts:watch": "decentraland-compiler build.json --watch",
    "copy:resources": "cp -r samples dist && cp -r src/certs dist && cp -r src/css dist",
    "lint": "tslint -e 'src/samples/**/*' -e '*.json' -c tslint.json 'src/**/*.ts'",
    "test": "mocha -r ts-node/register test/**/*.spec.ts",
    "unlock:dev": "node ./scripts/unlockDevDeps.js",
    "release": "node ./scripts/npmPublish.js",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "linters": {
      "*.ts": [
        "tslint -c tslint.json",
        "prettier --single-quote --no-semi --write",
        "git add"
      ]
    },
    "ignore": [
      "src/samples/**/*.ts"
    ]
  },
  "repository": "decentraland/cli",
  "keywords": [
    "decentraland",
    "cli",
    "dcl",
    "mana",
    "land"
  ],
  "license": "Apache-2.0",
  "homepage": "https://github.com/decentraland/cli",
  "devDependencies": {
    "@babel/runtime": "^7.2.0",
    "@types/analytics-node": "0.0.32",
    "@types/chai": "^4.1.2",
    "@types/chalk": "^2.2.0",
    "@types/express": "^4.11.1",
    "@types/fs-extra": "^5.0.0",
    "@types/glob": "^7.1.1",
    "@types/inquirer": "0.0.36",
    "@types/isomorphic-fetch": "0.0.34",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.18",
    "@types/opn": "^5.1.0",
    "@types/ora": "^1.3.4",
    "@types/react": "^16.7.13",
    "@types/react-dom": "^16.0.11",
    "@types/request": "^2.48.1",
    "@types/sinon": "^5.0.5",
    "@zeit/ncc": "^0.8.1",
    "analytics-node": "^3.2.0",
    "arg": "^4.1.0",
    "body-parser": "^1.18.3",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "chalk": "^2.3.1",
    "chokidar": "^2.0.3",
    "cors": "^2.8.4",
    "cross-spawn": "^6.0.5",
    "dcl-tslint-config-standard": "^1.0.1",
    "decentraland-dapps": "^3.8.0",
    "decentraland-eth": "^8.6.0",
    "decentraland-rpc": "^3.1.2",
    "decentraland-ui": "1.13.1",
    "docker-names": "^1.0.3",
    "eth-connect": "^0.3.0",
    "ethers": "^4.0.12",
    "express": "^4.16.2",
    "fs-extra": "^7.0.1",
    "git-rev-sync": "^1.11.1",
    "glob": "^7.1.3",
    "husky": "^1.1.3",
    "ignore": "^4.0.6",
    "inquirer": "^6.2.0",
    "interface-datastore": "^0.6.0",
    "ipfs-unixfs-engine": "^0.32.4",
    "isomorphic-fetch": "^2.2.1",
    "lint-staged": "^8.0.5",
    "mkdirp": "^0.5.1",
    "mocha": "^5.2.0",
    "opn": "^5.2.0",
    "ora": "^3.0.0",
    "package-json": "^5.0.0",
    "portfinder": "^1.0.13",
    "prettier": "^1.14.0",
    "proxyquire": "^2.1.0",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-redux": "^5.0.7",
    "react-router-redux": "^4.0.8",
    "redux": "^4.0.0",
    "redux-logger": "^3.0.6",
    "redux-saga": "^0.16.0",
    "request": "^2.88.0",
    "reselect": "^4.0.0",
    "rimraf": "^2.6.2",
    "semver": "^5.5.0",
    "sinon": "^7.1.1",
    "ts-node": "^4.1.0",
    "tslint": "^5.11.0",
