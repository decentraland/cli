{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "diagnostics": true,
    "outDir": "dist",
    "baseUrl": ".",
    "moduleResolution": "node",
    "stripInternal": true,
    "pretty": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "preserveConstEnums": true,
    "plugins": [{ "name": "tslint-language-service" }],
    "lib": ["es2017", "dom"],
    "resolveJsonModule": true
  },
  "exclude": ["dist", "node_modules", "**/*.test.ts", "samples/*"],
  "include": ["src/**/*"]
}
