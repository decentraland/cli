{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "diagnostics": true,
    "outDir": "../dist/linker-app",
    "baseUrl": ".",
    "moduleResolution": "node",
    "stripInternal": true,
    "pretty": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "plugins": [{ "name": "tslint-language-service" }],
    "jsx": "react",
    "resolveJsonModule": true
  },
  "exclude": ["build", "node_modules"],
  "include": ["src/**/*"]
}
