{
  "extends": "@dcl/eslint-config/sdk",
  "parserOptions": {
    "project": [
      "tsconfig.json",
      "test/tsconfig.json"
    ]
  },
  "rules": {
    "eqeqeq": ["error", "always"],
    "@typescript-eslint/no-non-null-assertion": "off",
    "@typescript-eslint/no-unused-vars": [
      "warn",
      {
        "ignoreRestSiblings": true,
        "argsIgnorePattern": "^_"
      }
    ]
  }
}